{% extends 'base_dashboard.html.twig' %}

{% block title %}Abonnement{% endblock %}

{% block body %}
    <script src="https://js.stripe.com/v3/"></script>

    <div class="p-4 p-md-5">
    {% include "_partials/navbar_parameters.html.twig" %}

    <h2 class="mb-4 mt-4">Abonnement</h2>


    {% if subscription is null or subscriptionStripe is null or subscriptionStripe.status == "incomplete" %}
        {% if user.trialEndedAt is not null %}
            <div class="alert alert-info">
                Vous bénéficiez de l'offre d'essai gratuit jusqu'au <b>{{ user.trialEndedAt|date("d-m-Y") }}</b>
            </div>
        {% endif %}

        <form id="subscription-form">

            <div class="form-section">
                <!-- Récap -->
                <div class="d-flex align-items-center justify-content-between mb-2 summary-row">
                    <div>Total</div>
                    <div class="value">12,50&nbsp;€</div>
                </div>

                <!-- Paiement -->
                <h5 class="mb-3">
                    Paiement Stripe
                </h5>

                <!-- Stripe Elements placeholder -->
                <div class="mb-3">
                    <label class="form-label">Numéro de carte</label>
                    <div id="card-element" class="form-control input-soft py-3">
                        <!-- Stripe Card Element will be mounted here -->
                    </div>
                </div>

                <!-- Billing info -->
                <h5 class="mt-4 mb-3">Informations de facturation</h5>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="E-mail" value="{{ user.email }}" disabled>
                </div>
                <div class="mb-3">
                    <label class="form-label">Nom du titulaire</label>
                    <input type="text" class="form-control" placeholder="Nom sur la carte">
                </div>
                <div class="mb-3">
                    <label class="form-label">Adresse <span class="text-secondary">(facultatif)</span></label>
                    <input type="text" class="form-control input-soft" placeholder="Adresse">
                </div>
                <div class="row g-3 mb-3">
                    <div class="col-md-7">
                        <label class="form-label">Ville</label>
                        <input type="text" class="form-control input-soft" placeholder="Ville">
                    </div>
                    <div class="col-md-5">
                        <label class="form-label">Code postal</label>
                        <input type="text" class="form-control input-soft" placeholder="Code postal">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Code promo</label>
                    <input type="text" id="promo" placeholder="Code promo" class="form-control" />
                </div>

                <!-- Bullets + aide -->
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="small">
                        <div class="mb-1"><i class="bi bi-check2-circle me-2 text-success"></i>Garantie satisfaction</div>
                        <div><i class="bi bi-check2-circle me-2 text-success"></i>Sans engagement – annulez à tout moment</div>
                    </div>
                    <a href="https://unidevi.fr/#" target="_blank" class="help-link">Besoin d’aide ?</a>
                </div>

                <!-- Terms -->
                <div class="form-check mb-4">
                    <input class="form-check-input" type="checkbox" value="" id="terms">
                    <label class="form-check-label" for="terms">
                        J’accepte les <a href="https://unidevi.fr/mentions-legales-et-cgv/" target="_blank">conditions de service</a>
                    </label>
                </div>

                <!-- CTA -->
                <button class="btn btn-primary w-100 btn-lg btn-cta" type="submit">
                    Activer Pro
                </button>

            </div>
    </form>
    {% else %}
        {% if subscription.active == true %}
            <h3>
                Souscription à {{ priceSubscription/100 }}€ par mois active
                <a href="{{ path("app_subscription_pause") }}" class="btn btn-outline-primary">Mettre en pause</a><br />
                <a href="https://dispoo.fr/resiliation" class="btn btn-outline-primary" target="_blank">Resilier l'abonnement</a>
            </h3>
        {% else %}
            <h3>
                Souscription à {{ priceSubscription/100 }}€ par mois inactive
                <a href="{{ path("app_subscription_resume") }}" class="btn btn-outline-primary">Reprendre l'abonnement</a><br />
                <a href="https://dispoo.fr/resiliation" class="btn btn-outline-primary" target="_blank">Resilier l'abonnement</a>
            </h3>
        {% endif %}

        <br /><br /><br />
        <h3>Mes paiements</h3>
        <table class="table table-dark table-striped mt-3">
            <thead>
            <tr>
                <th>Date</th>
                <th>Montant</th>
                <th>Etat</th>
            </tr>
            </thead>
            <tbody>
            {% for payment in payments %}
                <tr>
                    <td>{{ payment.createdAt|date("H:i d-m-Y") }}</td>
                    <td>{{ payment.amountCents/100 }}€</td>
                    <td>{{ payment.state }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
    <script>
    const stripe = Stripe('{{ public_key_stripe }}');
    const elements = stripe.elements();
    const style = {
      base: {
        fontSize: '16px',
        color: '#32325d',
        '::placeholder': { color: '#a0aec0' },
      }
    };

    const card = elements.create('card', { style });
    card.mount('#card-element');

    document.querySelector('#subscription-form').addEventListener('submit', async (e) => {
      e.preventDefault();
      const email = document.querySelector('#email').value;
      const promoCode = document.getElementById("promo").value;

      const { paymentMethod, error } = await stripe.createPaymentMethod({
        type: 'card',
        card: card,
        billing_details: { email }
      });

      if (error) {
        alert(error.message);
        return;
      }

      document.querySelector("#subscription-form").innerHTML = "<div class='loader'></div>";


      const res = await fetch('/create-subscription', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email, promoCode, paymentMethod: paymentMethod.id })
      });

      const { clientSecret } = await res.json();

      if (clientSecret !== undefined) {
        const result = await stripe.confirmCardSetup(clientSecret);
        window.location.reload();
      }
      else {
        alert("Le code promo n'existe pas");
        window.location.reload();
      }
    });
    </script>
{% endblock %}